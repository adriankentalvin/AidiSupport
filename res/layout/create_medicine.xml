<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background" android:orientation="vertical">
  
 <EditText
 	android:layout_marginTop="40dp"
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:hint="Generic Name"
 	android:id="@+id/etGenericName"
 	/>
 <EditText
 	android:layout_width="fill_parent"
 	android:layout_height="wrap_content"
 	android:hint="Medicine Name"
 	android:id="@+id/etMedicineName"
 	/>
 <EditText
 	android:layout_width="fill_parent"
 	android:layout_height="150dp"
 	android:hint="Medicine Description"
 	android:id="@+id/etMedicineDescription"
 	android:maxLines="500"
 	/>
 <Button 
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"
 	android:text="@string/save"
 	/>
    
</LinearLayout>
